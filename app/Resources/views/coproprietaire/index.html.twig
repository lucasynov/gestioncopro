{% extends 'base.html.twig' %}

{% block body %}

	<h3>Bonjour, {{ username }}</h3>

	<p> Ton email est : {{ email }} </p>

	<p>Voici les membres de ta copropriété : tu peux les contacter en utilisant l'onglet conversation.</p>
	<h3>Membre de la copropriété :</h3>
	<br>
	<table class="table table-dark" >
		<tr>
			<th>Nom</th>
			<th>Email</th>
		</tr>

	    {% for user in users %}
	    <tr>
	        <td>{{ user.username }}</td>
	        <td>{{ user.email }}</td>
	    </tr>
	    {% endfor %}
	</table>
	

{% endblock %}













