{% extends 'base.html.twig' %}

{% block body %}
	<h3>Voici les conversations en cours :</h3>
		<br>
		<a href="{{ path('AddConversation') }}" class="btn btn-success btn-success"><span class="glyphicon glyphicon-pencil"></span> Cr√©er une nouvelle conversation</a>
		<br><br>
		<table class="table table-dark" >
			<tr>
				<th>Nom de la conversation</th>
				<th>Actions</th>
				{% if is_granted('ROLE_ADMIN') %}
					<th>Administration</th>
				{% endif %}
			</tr>

		    {% for conversation in conversationUsers %}
		    <tr>
		        <td>{{ conversation.name }}</td>
		        <td><a href="{{ path('showConversation', {'id_conversation': conversation.id_conversation}) }}" class="btn btn-primary btn-info"><i class="fa fa-fw fa-comments"></i></span>Converser</a></td>
		        {% if is_granted('ROLE_ADMIN') %}
					<td><a href="{{ path('archiveConversation', {'id_conversation': conversation.id_conversation}) }}" class="btn btn-primary btn-danger"><i class="fa fa-fw fa-trash-o"></i></span>Archiver</a>
				{% endif %}
		    </tr>
		    {% endfor %}
		</table>

{% endblock %}













